<ul>
    {% for page in pages.children.visible %}
        {% set current_page = (page.active or page.activeChild) ? 'selected' : '' %}
        <li class="{{ current_page }} {{ page.title | lower }}">
            <a href="{{ page.url }}">
                {{ page.menu }}
            </a>
        </li>
    {% endfor %}
</ul>

<div class="mobile-footer">
    {% include 'components/footer.html.twig' %}
</div>

